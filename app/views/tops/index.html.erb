
<div class="main_form">
    <%= form_tag("/products/search", method: :get) do %>
        <div class="contents">
            <div class="content">
                <p>肌タイプ1</p>
                <%= select_tag 'type1', options_for_select([['---選択してください---', ''], ["脂性肌"], ["乾燥肌"], ["混合肌"]]) %>
            </div>
            <div class="content">
                <p>肌タイプ2</p>
                <%= select_tag 'type2', options_for_select([['---選択してください---', ''], ["普通"], ["敏感"]]) %>
            </div>
            <div class="content">
                <p>好み１</p>
                <%= select_tag 'taste1', options_for_select([['---選択してください---', ''], ["ナチュラル"], ["しっかり"]]) %>
            </div>
            <div class="content">
                <p>好み2</p>
                <%= select_tag 'taste2', options_for_select([['---選択してください---', ''], ["ツヤ"], ["マット"]]) %>
            </div>
            <div class="content">
                <p>ラメ</p>
                <%= select_tag 'glitter', options_for_select([['---選択してください---', ''], ["有"], ["無"]]) %>
            </div>
            <div class="content">
                <p>シーン１</p>
                <%= select_tag 'scene1', options_for_select([['---選択してください---', ''], ["オフィス"], ["スクール"], ["デイリー"]]) %>
            </div>
            <div class="content">
                <p>シーン2</p>
                <%= select_tag 'scene2', options_for_select([['---選択してください---', ''], ["季節重視"], ["流行重視"]]) %>
            </div>
        </div>
        <input type="submit" value="送信">
    <% end %>
</div>